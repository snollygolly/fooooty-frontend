// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

$font-family = Helvetica
$header-background-color = #006699
$masthead-background-color = #009966
$background-color = #cc9900

$body-color = #fff
$text-color = #000
$hover-color = #f4f0c3
$text-shadow = #5f6359
$box-shadow = #4b4d45

body
  padding-top: 72px
  color: $body-color
  background-color: $background-color

header
  font-family: $font-family

  .navbar
    background: $header-background-color
    padding: 10px 0
    border-bottom: 2px solid $box-shadow

    .navbar-brand,
    .navbar-nav > li > a
      color: $body-color

    .navbar-brand:hover,
    .navbar-nav > li > a:hover
      color: $hover-color

    .navbar-brand
      font-size: 22px
      text-transform: uppercase
      text-shadow: 2px 2px $text-shadow

    .nav > li > a
      font-size: 12px

.masthead
  background: $masthead-background-color url("../img/noise.png") top left repeat
  text-align: center

  h1
    font-family: $font-family
    font-size: 54px
    padding: 10px 0
    text-shadow: 2px 2px $text-shadow

    strong
      color: $hover-color

  h2
    color: $body-color
    font-weight: 100
    font-size: 28px
    padding: 20px 0 10px
    border-top: 2px solid $body-color
    box-shadow: 0 -2px $header-background-color
    margin: 10px auto

    a
      color: inherit
      text-decoration: none

    a:hover
      color: $hover-color

.features
  position: relative
  z-index: 2
  padding: 30px 0
  box-shadow: inset 0px 2px $box-shadow

  .info-bullet
    text-align: center
    margin-bottom: 10px

    i
      font-size: 90px
      display: block
      line-height: 102px
      text-shadow: 1px 1px $text-shadow

    h5
      color: $body-color
      font-size: 22px
      text-transform: uppercase
      text-shadow: 1px 1px $text-shadow
      margin-bottom: 5px
      padding-bottom: 10px
      font-family: $font-family

  p
    color: $text-color

footer
  font-family: $font-family

  a
    color: #b7c4be
    font-size: 18px
    margin-right: 15px

  a:hover
    color: $body-color
    text-decoration: none
